<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="thruster_macro" params="name *origin">

    <joint name="${name}_thruster" type="revolute">
      <xacro:insert_block name="origin"/>
      <parent link="base_frame" />
      <child link="${name}" />
        <axis xyz="0 0 1" />
        <limit
          lower="-1E12"
          upper="1E12"
          effort="1E6"
          velocity="100" />
    </joint>

    <link
      name="${name}">
      <visual>
        <origin
          xyz="0 0 0"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="file://$(find ricketts_sim/data/meshes/rov_doc_ricketts/propeller.stl" />
        </geometry>
        <material
          name="">
          <color
            rgba="0.5 0.5 0.5 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh
            filename="file://$(find ricketts_sim/data/meshes/rov_doc_ricketts/propeller.stl" />
        </geometry>
      </collision>
    </link>
  
  </xacro:macro>
</robot>